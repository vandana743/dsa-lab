#include <stdio.h>
#include <stdbool.h>

bool is_sorted(int arr[], int n) {
    // An array with 0 or 1 element is considered sorted.
    if (n <= 1) {
        return true;
    }
    
    // Iterate through the array and check if each element is less than or equal to the next one.
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] > arr[i+1]) {
            return false; // If an element is greater than the next, it's not sorted.
        }
    }
    
    return true; // If the loop completes, the array is sorted.
}

int main() {
    int n;
    
    // Read the number of elements.
    scanf("%d", &n);
    
    int arr[n];
    
    // Read the elements of the array.
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    // Check if the array is sorted and print the result.
    if (is_sorted(arr, n)) {
        printf("True\n");
    } else {
        printf("False\n");
    }
    
    return 0;
}
